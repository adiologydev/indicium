{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2021",
		"outDir": "./dist",
		"declaration": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": false,
		"importHelpers": true,
		"removeComments": false,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": false,
		"allowJs": false,
		"strict": true,
		"strictNullChecks": false,
		"types": ["node"]
	},
	"exclude": ["../node_modules", "./**/*.spec.ts"],
	"include": ["src/**/*"]
}
